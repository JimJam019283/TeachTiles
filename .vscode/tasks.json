{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "-std=c++17",
        "-o",
        "${workspaceFolder}/main",
        "${workspaceFolder}/src/host_main.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "g++ build task for host_main.cpp (host test)"
    }
    ,
    {
      "label": "build:local-shim",
      "type": "shell",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "-std=c++17",
        "-o",
        "${workspaceFolder}/main",
        "${workspaceFolder}/src/native_main.cpp",
        "${workspaceFolder}/src/host_main.cpp"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Build using native shim and host_main for local testing"
    },
    {
      "label": "arduino:compile",
      "type": "shell",
      "command": "arduino-cli",
      "args": [
        "compile",
        "--fqbn",
        "esp32:esp32:esp32",
        "${workspaceFolder}"
      ],
      "problemMatcher": [] ,
      "detail": "Compile for ESP32 using arduino-cli (requires arduino-cli and ESP32 cores)"
    },
    {
      "label": "arduino:upload",
      "type": "shell",
      "command": "arduino-cli",
      "args": [
        "upload",
        "-p",
        "${input:serialPort}",
        "--fqbn",
        "esp32:esp32:esp32",
        "${workspaceFolder}"
      ],
      "problemMatcher": [],
      "detail": "Upload to ESP32 using arduino-cli (set serialPort input)",
      "dependsOn": ["arduino:compile"]
    }
    ,
    {
      "label": "arduino:upload:auto",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/upload.sh",
      "args": [],
      "problemMatcher": [],
      "detail": "Auto-detect serial port and upload using bundled arduino-cli",
      "dependsOn": ["arduino:compile"]
    }
  ]
  ,
  "inputs": [
    {
      "id": "serialPort",
      "type": "promptString",
      "description": "Serial port to upload to (e.g. /dev/cu.SLAB_USBtoUART). Leave blank to autodetect.",
      "default": ""
    }
  ]
}

